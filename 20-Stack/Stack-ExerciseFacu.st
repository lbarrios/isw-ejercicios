!OOStack methodsFor: 'initialization' stamp: 'FL 9/16/2019 21:40:35'!
initialize

	collection  _ OrderedCollection new.
	state _ OOStackStateEmpty new.! !


!OOStack methodsFor: 'evaluating' stamp: 'FL 9/16/2019 19:28:56'!
isEmpty

	^collection isEmpty ! !

!OOStack methodsFor: 'evaluating' stamp: 'FL 9/16/2019 19:52:02'!
size
	^collection size! !


!OOStack methodsFor: 'accessing' stamp: 'FL 9/16/2019 21:48:24'!
seeTopBeingEmpty
	^self error: self class stackEmptyErrorDescription! !

!OOStack methodsFor: 'accessing' stamp: 'FL 9/16/2019 21:51:41'!
seeTopNotBeingEmpty
	^collection last! !

!OOStack methodsFor: 'accessing' stamp: 'FL 9/16/2019 21:52:51'!
top
	^state checkStackTop: self.
	 ! !


!OOStack methodsFor: 'adding' stamp: 'FL 9/16/2019 21:53:44'!
push: something

	collection  addLast: something.
	state _ OOStackStateNotEmpty new.! !


!OOStack methodsFor: 'removing' stamp: 'FL 9/16/2019 20:30:56'!
pop
	| top |
	top _ self top.
	collection removeLast.
	^top! !

